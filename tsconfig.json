{
    "compilerOptions": {
        "target": "ES2022",
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "types": [
            "node",
            "jest"
        ],
        "resolveJsonModule": true,
        "declaration": true,
        "outDir": "./dist",
        "noEmitOnError": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
}